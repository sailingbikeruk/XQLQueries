// Find event ID in XQL from an individual host
dataset = xdr_data 
| filter agent_hostname = "<hostname>"
| filter action_evtlog_event_id in (4624, 4625) //change the event ID as necessary
| alter LogonType = json_extract_scalar(action_evtlog_data_fields , "$.LogonType")
| filter LogonType in ("10")
| alter IpAddress = json_extract_scalar(action_evtlog_data_fields , "$.IpAddress")
| alter TargetUserName = json_extract_scalar(action_evtlog_data_fields , "$.TargetUserName")
| fields agent_hostname, action_evtlog_event_id, LogonType, IpAddress, TargetUserName, action_evtlog_data_fields
| sort desc _time
